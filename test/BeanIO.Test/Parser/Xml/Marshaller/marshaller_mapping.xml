<?xml version='1.0' encoding='UTF-8' ?>
<beanio xmlns="http://www.beanio.org/2012/03" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.beanio.org/2012/03 http://www.beanio.org/2012/03/mapping.xsd">

  <stream name="stream" format="xml" xmlName="stream">
    <parser class="BeanIO.Parser.Xml.TestXmlWriterFactory, BeanIO.Test" />
    <record name="person" class="BeanIO.Beans.Person, BeanIO.Test" maxOccurs="2">
      <field name="firstName" />
      <field name="lastName" />
    </record>
    <record name="order" class="BeanIO.Beans.Order, BeanIO.Test">
      <field name="id" />
    </record>
  </stream>

</beanio>