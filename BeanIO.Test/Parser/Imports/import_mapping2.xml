<?xml version='1.0' encoding='UTF-8' ?>
<beanio xmlns="http://www.beanio.org/2012/03" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.beanio.org/2012/03 http://www.beanio.org/2012/03/mapping.xsd">
  
  <import resource="resource:BeanIO.Parser.Imports.import_mapping3.xml, BeanIO.Test" />

  <typeHandler name="name" class="BeanIO.Types.StringTypeHandler, BeanIO">
    <property name="trim" value="true" />
  </typeHandler>

  <stream name="stream2.1" format="csv">
    <record name="record" class="map">
      <field name="name" />
      <field name="date" type="date" />
    </record>
  </stream>

</beanio>