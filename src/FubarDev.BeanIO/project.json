{
  "version": "4.0.0-*",
  "authors": [ "Fubar Development Junker", "Mark Junker" ],
  "title": "BeanIO",
  "description": "A .NET port of BeanIO which perfectly fits into the .NET world.",
  "copyright": "Fubar Development, Kevin Seim 2015-2016",

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG" ],
        "debugType": "portable"
      }
    },
    "Release": {
      "buildOptions": {
        "debugType": "none",
        "xmlDoc": true
      }
    }
  },

  "buildOptions": {
    "additionalArguments": [ "/ruleset:../../BeanIO.ruleset", "/additionalfile:../../stylecop.json" ],
    "keyFile": "../../BeanIO.snk",
    "compile": [ "../../GlobalAssemblyInfo.cs" ],
    "embed": "**/*.properties"
  },

  "packOptions": {
    "summary": "A .NET port of BeanIO",
    "owners": [ "FubarCoder" ],
    "licenseUrl": "http://opensource.org/licenses/MIT",
    "projectUrl": "https://github.com/FubarDevelopment/beanio-net",
    "tags": [ "BeanIO", "Core", "CSV", "XML", "fixed length", "file", "parse", "serialize", "deserialize", "serialization", "deserialization", "parsing", "marshal", "marshalling", "unmarshal", "unmarshalling" ],
    "iconUrl": "https://github.com/FubarDevelopment/beanio-net/raw/master/beanio-logo.png",
    "repository": {
      "type": "git",
      "url": "https://github.com/FubarDevelopment/restsharp.portable"
    },
    "files": {
      "mappings": {
        "/": [ "../../*.md", "../../beanio-logo.png", "../../LICENSE" ],
        "src/Xsd/": "Xsd/",
        "build/": "../../packaging/FubarDev.BeanIO.targets",
        "lib/native/": [ "../../packaging/_._" ]
      }
    },
    "releaseNotes": "- Support for .NET Core"
  },

  "dependencies": {
    "JetBrains.Annotations": {
      "version": "10.1.5",
      "type": "build"
    },
    "NodaTime": "2.0.0-alpha20160729",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },

  "frameworks": {
    "netstandard1.1": {
      "imports": [ "dotnet" ],
      "dependencies": {
        "System.Collections.Concurrent": "4.0.12",
        "System.Diagnostics.Contracts": "4.0.1",
        "System.Diagnostics.Tools": "4.0.1",
        "System.Reflection.Extensions": "4.0.1",
        "System.Runtime": "4.1.0",
        "System.Text.Encoding.Extensions": "4.0.11",
        "System.Text.RegularExpressions": "4.1.0",
        "System.Xml.ReaderWriter": "4.0.11",
        "System.Xml.XDocument": "4.0.11"
      }
    },
    "net45": {
      "frameworkAssemblies": {
        "System.Xml.Linq": ""
      }
    }
  }
}
